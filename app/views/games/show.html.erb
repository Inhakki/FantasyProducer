<h1>The <%= @game.groupname %> Room</h1>

<p id="error"><%= flash[:error] %></p>
<ul>
    <% @users_in_game.each do |member| %>
      <li class="first"><%= link_to "#{member.name}", user_path(member) %></li>
    <% end %>
</ul>

<ul>

</ul>

<% if signed_in? && !Membership.where(game_id: params[:id], user_id: current_user.id).empty? %>
  <%= button_to "leave room", game_membership_path(params[:id], current_user.id), method: 'delete' %>

  <%= link_to "Ready?", edit_game_membership_path(params[:id], current_user.id), method: 'post' %>
<% end %>
