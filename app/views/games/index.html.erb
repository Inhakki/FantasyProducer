<h1>Available Games</h1>

<ul>
  <% @games.each do |game| %>
    <li>
      <%= link_to "#{game.groupname}", game_path(game) %>
      <%= link_to "edit room", edit_game_path(game) %>
      <%= form_for game, method: 'delete' do |f| %>
        <%= f.submit "destroy room", id: "destroy" %>
      <% end %>
      <%= form_for game, method: 'join' do |f| %>
        <%= f.submit "join room", id: "join" %>
      <% end %>
    </li>
  <% end %>
</ul>

