<h1>Available Games</h1>

<ul>
  <% @games.each do |game| %>
    <li>
      <%= link_to "#{game.groupname}", game_path(game) %>
      <% if signed_in? %>
        <%= link_to "edit room", edit_game_path(game) %>
        <%= form_for game, method: 'delete' do |f| %>
          <%= f.submit "destroy room" %>
        <% end %>
        <% if Membership.where(game_id: game.id, user_id: current_user.id).empty? %>
          <%= button_to "join room", game_memberships_path(game), action: 'post' %>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>

<!--Test this -->
<% if signed_in? %>
  <%= link_to "create room", new_game_path %>
<% end %>
