body {
  background: url(<%= asset_path('pattern.png')%>);
  margin: 0;
}

body .navbar {
  background: url(<%= asset_path('film_strip.png') %>) repeat-x;
  background-color: rgba(70,70,70,.3);
  background-size: 120px;
  color: #00FFFF;
  padding: 10px;
}


a:link{
  color: #7C9799;
  font-family: Helvetica, sans-serif;
  text-decoration: none;
}

a:visited{
  color: #7C8199;
}

body .navbar li {
  display: inline;
  font-size: 25px;
}

body .navbar li:last-child {
  float: right;
}

body h1 {
  font-family: 'Raleway', Helvetica, sans-serif;
  margin: 0 auto;
  max-width: 750px;
  padding: 30px;
  text-align: center;
  width: 100%;
}

body .wrapper {
  display: block;
  font-family: 'Playfair Display', sans-serif;
  margin: 0 auto;
  max-width: 770px;
  padding: 30px;
}

body .wrapper.withBackground{
  background-color: transparent;
  position: relative;
}

body .wrapper.withBackground::before{
  background: url(<%= asset_path("scripts_paper.png") %>);
  background-size: 800px;
  content: " ";
  margin-left: -15px;
  position: absolute;
  height: 700px;
  width: 800px;
  z-index: -1;

}

body .wrapper p {
  padding-left: 70px;
}

body .wrapper ul {
  padding-left: 80px;
}

body .wrapper ul li{
  display: inline;
}
